---
const { title, image, description, date, places, type } = Astro.props as {
  title: string;
  image: string;
  description: string;
  date: string | Date;
  places: number;
  type: string;
};

const options: Intl.DateTimeFormatOptions = {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
  hour: "2-digit",
  minute: "2-digit",
};

function formatDateSafe(input: string | Date, locale = "fr-FR") {
  const parsedDate = input instanceof Date ? input : new Date(input);

  // VÃ©rifie si la date est valide
  if (isNaN(parsedDate.getTime())) {
    return "Date invalide";
  }

  return parsedDate.toLocaleString(locale, options);
}

const d = formatDateSafe(date);
---

<style>
  .card {
    background: #1a0f1f;
    border: 2px solid #8C5B9E;
    border-radius: 12px;
    padding: 1rem 1.5rem;
    width: fit-content;
    margin: 1.5rem;
    box-shadow: 0 0 12px #5a326e55;
  }

  h2 {
    color: #FFAE42;
    font-family: 'Orbitron', sans-serif;
    margin: 0;
  }

  img {
    height: 200px;
    width: 300px;
  }

  .date {
    color: #aaa;
    font-size: 0.9rem;
    margin-top: 0.3rem;
  }

  .tag {
    display: inline-block;
    background: #FFAE42;
    color: #1a0f1f;
    padding: 0.2rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    margin-top: 0.5rem;
  }
</style>

<div class="card">
  <img src={image} alt="">
  <h2>{title}</h2>
  <div class="date">{d}</div>
  <div class="description">{description}</div>
  <div>Il reste : {places} places</div>
  <div class="tag">{type}</div>
</div>