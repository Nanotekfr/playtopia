---
import RunatikaLogo from '../assets/RunatikaLogoRune.svg';
import Social from './Social.astro';
---

<style>
/* Box-sizing global pour éviter débordements */
nav, .nav-links, .logo, .controls {
  box-sizing: border-box;
}

nav {
  position: sticky;
  top: 0;
  z-index: 1000;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100vw;              /* prend toute la largeur de la fenêtre */
  padding: 10px 20px;        /* padding inclus dans box-sizing */
  background-color: var(--bg-nav);
  color: var(--text-color);
  border-bottom: solid 5px orange;
  overflow-x: hidden;         /* empêche le scroll horizontal */
  transition: background-color 0.3s, color 0.3s;
}

.logo {
  font-weight: bold;
  font-size: 20px;
  letter-spacing: 2px;
  text-decoration: none;
}

.controls {
  display: flex;
  align-items: center;
  gap: 10px;
}

.burger,
.toggle-theme {
  font-size: 24px;
  background: none;
  border: none;
  color: var(--text-color);
  cursor: pointer;
  display: none;
}

.nav-links {
  display: flex;
  gap: 30px;
  transition: max-height 0.4s ease, opacity 0.3s ease, transform 0.3s ease;
}

.nav-links a {
  color: var(--text-color);
  text-decoration: none;
  font-size: 14px;
  text-transform: uppercase;
  position: relative;
}

/* Underline animé */
.nav-links a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 0%;
  height: 2px;
  background: var(--accent-color);
  transition: width 0.3s ease-in-out;
}

.nav-links a.active::after,
.nav-links a:hover::after {
  width: 100%;
}

.contact-button {
  color: white;
  border: none;
  text-transform: uppercase;
  font-size: 12px;
  border-radius: 4px;
  cursor: pointer;
  text-decoration: none;
}

/* ========== Responsive ========== */

/* Smartphones */
@media screen and (max-width: 599px) {
  .logo {
    font-size: 10px;
  }

  .nav-links {
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    width: 75%;
    max-width: 300px;
    background: var(--bg-color);
    flex-direction: column;
    justify-content: center;
    padding: 40px 20px;
    transform: translateX(100%);
    opacity: 0;
    pointer-events: none;
    z-index: 999;
  }

  .nav-links.show {
    transform: translateX(0);
    opacity: 1;
    pointer-events: auto;
  }

  .nav-links a {
    font-size: 18px;
    margin: 12px 0;
  }

  .burger {
    display: block;
  }
}
</style>

<nav>
  <a href="/" class="logo" aria-label="Accueil Runatika">
    <span class="logo-span" role="img" aria-label="Logo Runatika">
      <RunatikaLogo width={30} height={30} />unetika
    </span>
  </a>

  <button class="burger" onclick="toggleMenu()" aria-label="Menu">&#9776;</button>

  <div class="nav-links" id="navLinks">
    <a href="/admin">Bypass</a>
    <a href="/events">Events</a>
    <a href="/actualites">Actualité</a>
    <a href="/blog">Blog</a>
    <a href="/about">A propos</a>
    <a href="/tags/">Étiquettes</a>
  </div>

  <div>
    <Social/>
  </div>
</nav>

<script is:inline>
  function toggleMenu() {
    const menu = document.getElementById('navLinks');
    menu?.classList.toggle('show');
  }
</script>